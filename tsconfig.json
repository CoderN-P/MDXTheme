{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "module": "esnext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*", "template/types.d.ts"],
  "exclude": ["node_modules", "dist"]
}